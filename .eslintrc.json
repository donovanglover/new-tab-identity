{
  "root": true,

  "env": {
    "browser": true,
    "es2020": true
  },

  "extends": [
    "love",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:react-hooks/recommended",
    "plugin:tailwindcss/recommended"
  ],

  "ignorePatterns": [
    "dist",
    ".eslintrc.json"
  ],

  "plugins": [
    "simple-import-sort",
    "react",
    "react-refresh"
  ],

  "rules": {
    "react-refresh/only-export-components": [
      "warn",
      {
        "allowConstantExport": true
      }
    ]
  }
}
